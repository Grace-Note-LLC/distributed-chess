{
    "compilerOptions": {
        "outDir": "./static/js",        // Output directory for compiled JS files
        "target": "es6",         // Target ES6 JavaScript standard
        "module": "es6",         // Use ES6 modules
        "strict": true,          // Enables all strict type checking options
        "esModuleInterop": true  // Enable ES module interop for imports
    },
    "include": ["./static/ts/**/*"]    // Include all TypeScript files in /ts
}
  